@model  GameGram.Web.ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="row" style="margin-top:50px;margin-bottom:50px;">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">

        <h2 style="margin-bottom:50px;">Login to your Account</h2>

        <form role="form" class="dv-form-bordered" action="/account/login-by-email" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Email Address</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", placeholder = "Email Address" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Password</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
            </div>
            <button type="submit" id="submit" name="submit" class="btn btn-primary btn-blue noborder btn-rounded">Login</button>
        </form>
    </div>
    <div class="col-sm-1">
    </div>
</div>

